@model ApplicationUser
@{
    ViewData["Title"] = "Edit User Page";
}

<h1 class="text-info"> Edit User </h1>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="User" asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input type="text" readonly class="form-control" asp-for="Email" />
                <input type="hidden" asp-for="Email" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoleId"></label>
                <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-select">
                    <option disabled selected> --- Select Role --- </option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"> Update </button>
                <a class="btn btn-warning" style="width: auto;" asp-controller="User" asp-action="Index"> Back to List </a>
            </div>

        </form>
    </div>
</div>