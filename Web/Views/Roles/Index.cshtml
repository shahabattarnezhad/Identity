@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "List of Roles Page";
}


<div class="row mt-5">
    <div class="col-6">
        <h2 class="text-primary"> List of Roles </h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="InsertUpdate"> Create New Role </a>
    </div>
</div>

<div class="p-4 rounded border mt-5">
    @if(Model.Any())
    {
        <table class="table table-bordered table-striped border">
            <thead>
                <tr class="table-secondary">
                    <th> Id </th>
                    <th> Name </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
               {
                   <tr>
                       <td> @item.Id </td>
                       <td> @item.Name </td>
                       <td></td>
                   </tr>
               }
            </tbody>
        </table>
    }
</div>