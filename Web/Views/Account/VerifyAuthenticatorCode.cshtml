@model VerifyAuthenticatorVm
@{
    ViewData["Title"] = "Verification of Authenticator Page";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-info"> Verify Authenticator Code </h1>
    </div>
    <form method="post"
          asp-controller="Account"
          asp-action="VerifyAuthenticatorCode"
          asp-route-returnUrl="@ViewData["ReturnUrl"]"
          role="form">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" asp-for="RememberMe" />

        <div class="form-group">
            <label class="col-md-2" asp-for="Code"></label>
            <div class="col-md-10">
                <input class="form-control" asp-for="Code" />
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 mt-3">
                <button class="btn btn-primary" type="submit"> Submit </button>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }