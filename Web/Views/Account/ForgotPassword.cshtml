@model ForgotPasswordVm
@{
    ViewData["Title"] = "Forgot Password Page";
}

<h1 class="text-info mt-5"> Do you forget your password? </h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal" role="form">
                <h4>Please enter your e-mail.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mt-4">
                    <label asp-for="Email" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary"> Send </button>
                    </div>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }